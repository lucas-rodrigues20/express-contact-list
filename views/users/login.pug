doctype html
html(lang="en")
  include ../common/head.pug
  +head()
  body
    header
      include ../common/navbar.pug
      +navbar()
    div.container
      div.row
        div.col-md-4.mx-auto
          div.card.bg-light.border.border-secondary.mt-4
            div.card-body
              h1.card-title Login
              hr
              form(action="/login" method="POST")
                div.input-group
                  div.input-group-prepend
                    span.input-group-text
                      i.fas.fa-user
                  input(type="email" name="email" placeholder="Email" required=true).form-control.form-control-lg
                div.input-group.mt-2
                  div.input-group-prepend
                    span.input-group-text
                      i.fas.fa-key
                  input(type="password" name="password" placeholder="Password" required=true).form-control.form-control-lg
                button(type="submit").mt-2.btn.btn-lg.btn-block.btn-primary Login
    include ../common/footer.pug
    +footer()